{
    "name": "sirix/sirix-config",
    "description": "Utils to load, parse and work with configuration on Mezzio projects",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Sirix",
            "homepage": "https://github.com/sirix777"
        }
    ],
    "homepage": "https://github.com/sirix777",
    "require": {
        "php": "~8.2.0 || ~8.3.0 || ~8.4.0 || ~8.5.0",
        "cuyz/valinor": "^2.3",
        "laminas/laminas-servicemanager": "^3.22 || ^4.2",
        "laminas/laminas-stdlib": "^3.20"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.8",
        "devster/ubench": "^2.1",
        "phpunit/phpunit": "^11.5",
        "psr/simple-cache": "^2.0",
        "roave/security-advisories": "dev-master",
        "symfony/var-dumper": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "Sirix\\Config\\": "src"
        },
        "files": [
            "functions/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "SirixTest\\Config\\": "test"
        }
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": false,
            "forward-command": true,
            "target-directory": "tools"
        },
        "laminas": {
            "config-provider": "Sirix\\Config\\ConfigProvider"
        }
    },
    "scripts": {
        "analyse-deps": "tools/composer-dependency-analyser/vendor/bin/composer-dependency-analyser",
        "check": [
            "@cs-check",
            "@rector",
            "@phpstan",
            "@test"
        ],
        "cs-check": "php tools/php-cs-fixer/vendor/bin/php-cs-fixer fix -vvv --dry-run --diff",
        "cs-fix": "php tools/php-cs-fixer/vendor/bin/php-cs-fixer fix -vvv",
        "normalize": "@composer bin composer-normalize normalize --diff ../../composer.json",
        "phpstan": "php tools/phpstan/vendor/bin/phpstan analyse src functions --level=8",
        "rector": "php tools/rector/vendor/bin/rector process --dry-run --xdebug --memory-limit=2G",
        "test": "phpunit --order-by=random --testdox --colors=always"
    }
}
